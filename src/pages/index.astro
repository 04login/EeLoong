---
import '../styles/global.css';

import { me } from '../data/profile.ts';

const projects = [
	{
		title: 'Project One',
		desc: 'Brief one-liner about what this project does and who it helps.',
		link: '#',
		stack: ['Astro', 'Tailwind', 'TypeScript'],
	},
	{
		title: 'Project Two',
		desc: 'A concise description that highlights the impact or metric.',
		link: '#',
		stack: ['React', 'Node', 'PostgreSQL'],
	},
	{
		title: 'Project Three',
		desc: 'Explain the problem you solved and the approach you took.',
		link: '#',
		stack: ['Design System', 'Accessibility'],
	},
];

const nameStack = me.name.trim().replace(/\s+/g, '\n');

---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/é¾™.jpg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{me.name}</title>
		<script type="module" src="https://cdn.jsdelivr.net/npm/iconify-icon@1/dist/iconify-icon.min.js"></script>
	</head>
	<body class="min-h-screen bg-[color:var(--ink-900)] text-[color:var(--paper)]">
		<main class="min-h-screen">
			<div class="grid min-h-screen grid-cols-[1fr_auto]">
				<div class="flex flex-col justify-start gap-4 px-6 py-10">
					<div class="flex flex-col gap-1">
						<p class="text-xs font-semibold uppercase tracking-[0.28em] text-[color:var(--paper)]/60">Where I'm from</p>
						<p class="text-2xl font-semibold text-[color:var(--paper)]">{me.location}</p>
					</div>
					<div class="flex flex-col gap-1">
						<p class="text-xs font-semibold uppercase tracking-[0.28em] text-[color:var(--paper)]/60">What I've worked on</p>
						<ul class="flex flex-col gap-1 text-[color:var(--paper)]/80">
							<li>Role or project 1</li>
							<li>Role or project 2</li>
							<li>Role or project 3</li>
						</ul>
					</div>
					<div class="flex flex-col gap-1">
						<p class="text-xs font-semibold uppercase tracking-[0.28em] text-[color:var(--paper)]/60">Experience</p>
						<ul class="flex flex-col gap-1 text-[color:var(--paper)]/80">
							<li>Years of experience: (fill in)</li>
							<li>Focus areas: (fill in)</li>
						</ul>
					</div>
				</div>
				<div class="flex h-full flex-col items-start justify-center gap-4 pr-4 text-left">
					<div class="text-8xl font-semibold whitespace-pre-line">{nameStack}</div>
					<div class="flex gap-3 text-sm">
						<a class="flex h-9 w-9 items-center justify-center rounded-full border border-[color:var(--paper)]/30 text-[color:var(--paper)] transition hover:border-[color:var(--paper)] hover:bg-[color:var(--paper)]/10" href={me.Email} aria-label="Email">
							<iconify-icon icon="mdi:email-outline" class="inline-flex h-5 w-5 items-center justify-center"></iconify-icon>
						</a>
						<a class="flex h-9 w-9 items-center justify-center rounded-full border border-[color:var(--paper)]/30 text-[color:var(--paper)] transition hover:border-[color:var(--paper)] hover:bg-[color:var(--paper)]/10" href={me.LinkedIn} target="_blank" rel="noreferrer" aria-label="LinkedIn">
							<iconify-icon icon="mdi:linkedin" class="inline-flex h-5 w-5 items-center justify-center"></iconify-icon>
						</a>
						<a class="flex h-9 w-9 items-center justify-center rounded-full border border-[color:var(--paper)]/30 text-[color:var(--paper)] transition hover:border-[color:var(--paper)] hover:bg-[color:var(--paper)]/10" href="https://github.com" target="_blank" rel="noreferrer" aria-label="GitHub">
							<iconify-icon icon="mdi:github" class="inline-flex h-5 w-5 items-center justify-center"></iconify-icon>
						</a>
					</div>
				</div>
				</div>
			</div>
		</main>
	</body>
</html>
